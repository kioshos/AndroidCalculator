<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:textSize="32dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/result_TextBox"
        android:id="@+id/memory_TextBox"
        android:layout_margin="15dp">

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="66dp"
        android:textAlignment="textEnd"
        android:layout_above="@+id/buttonsLayout"
        android:id="@+id/result_TextBox"
        android:layout_margin="15dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonsLayout"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="&lt;"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Backspace"
                android:layout_margin="5dp"
                android:backgroundTint="#FA7878">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="("
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_openBracket"
                android:layout_margin="5dp"
                android:backgroundTint="#DBB8C3">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text=")"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_closeBracket"
                android:layout_margin="5dp"
                android:backgroundTint="#D9B7C1">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_margin="5dp"
                android:backgroundTint="#E7A47E"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32dp">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="7"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Seven"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="8"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Eight"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="9"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Nine"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="X"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Miltiply"
                android:layout_margin="5dp"
                android:backgroundTint="#E7A47E">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="4"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Four"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="5"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Five"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="6"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Six"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="-"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Minus"
                android:layout_margin="5dp"
                android:backgroundTint="#E7A47E">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="1"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_One"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="2"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Two"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="3"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Three"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="+"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Plus"
                android:layout_margin="5dp"
                android:backgroundTint="#E7A47E">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="6dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="C"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_ClearButton"
                android:layout_margin="5dp"
                android:backgroundTint="#FA7878">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="0"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Zero"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="."
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Dot"
                android:layout_margin="5dp">

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="82dp"
                android:layout_height="82dp"
                style="@style/Widget.Material3.FloatingActionButton.Tertiary"
                android:text="="
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_Equals"
                android:layout_margin="5dp"
                android:backgroundTint="#E7A47E">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
